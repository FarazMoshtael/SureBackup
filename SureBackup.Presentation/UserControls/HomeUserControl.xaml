<UserControl x:Class="SureBackup.Presentation.UserControls.HomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SureBackup.Presentation.UserControls" xmlns:controls="clr-namespace:SureBackup.Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

   
        <Grid VerticalAlignment="Center" Grid.Row="0" ShowGridLines="False"  Margin="10" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border  Style="{StaticResource TableCellStyleBorder}" BorderThickness="1,1,1,0" Padding="10" CornerRadius="5,0,0,0" >
                <TextBlock Text="Encryption" Style="{StaticResource TableCellHeaderTextStyle}" />
            </Border>
            <Border Grid.Row="1" Grid.Column="0"   Style="{StaticResource TableCellStyleBorder}" BorderThickness="1" CornerRadius="0,0,0,5" Padding="10" >
                <TextBlock Text="{Binding EncryptionStatus}" Style="{StaticResource TableCellTextStyle}"/>

            </Border>
            <Border Grid.Row="0" Grid.Column="1"  Style="{StaticResource TableCellStyleBorder}" BorderThickness="0,1,1,0" Padding="10" >
                <TextBlock Text="FTP Credentials" Style="{StaticResource TableCellHeaderTextStyle}" />
            </Border>
            <Border Grid.Row="1" Grid.Column="1"  Style="{StaticResource TableCellStyleBorder}" BorderThickness="0,1,1,1" Padding="10" >
                <TextBlock Text="{Binding FTPStatus}" Style="{StaticResource TableCellTextStyle}"/>

            </Border>


            <Border Grid.Row="0" Grid.Column="3"  BorderThickness="0,1,1,0" Padding="10" CornerRadius="0,5,0,0"  Style="{StaticResource TableCellStyleBorder}">
                <TextBlock Text="Backup Process"  Style="{StaticResource TableCellHeaderTextStyle}" />

            </Border>
            <Border Grid.Row="1" Grid.Column="3"   Style="{StaticResource TableCellStyleBorder}" BorderThickness="0,1,1,1" CornerRadius="0,0,5,0" Padding="10">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    

                    <controls:CustomBorderButton BorderBackground="{StaticResource LightGrayBlueColorBrush}" Availability="{Binding RunButtonEnabled}" Command="{Binding RunBackupProcessCommand}"
                                               FontContent="&#xf04b;"  Foreground="Green" FontSize="20" ButtonPadding="5"/>
                    <controls:CustomBorderButton BorderBackground="{StaticResource LightGrayBlueColorBrush}" Availability="{Binding StopButtonEnabled}" Command="{Binding StopBackupProcessCommand}"
                               FontContent="&#xf04d;"  Foreground="OrangeRed" FontSize="20" ButtonPadding="5"/>
                    
                </StackPanel>
            </Border>
            
        </Grid>
        <Border Grid.Row="1" CornerRadius="3" Margin="10" BorderThickness="1" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <TextBlock TextWrapping="Wrap"  Background="White" Foreground="Black"
                           FontFamily="Consolas" Text="{Binding ConsoleLog}" Padding="5"
              />
            </ScrollViewer>
        
        </Border>


    </Grid>
    
    
</UserControl>
