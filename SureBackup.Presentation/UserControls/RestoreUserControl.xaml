<UserControl x:Class="SureBackup.Presentation.UserControls.RestoreUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:enums="clr-namespace:SureBackup.Domain.Enums;assembly=SureBackup.Domain"
             xmlns:local="clr-namespace:SureBackup.Presentation.UserControls" xmlns:controls="clr-namespace:SureBackup.Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="DatabaseValues" 
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:Database"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <GroupBox Header="Restore Options" Padding="10">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Database:" Grid.Row="0" VerticalAlignment="Center" />
            <ComboBox ItemsSource="{Binding Source={StaticResource DatabaseValues}}" SelectedItem="{Binding DatabaseType}" 
           Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" Margin="10,0,0,0" />

            <TextBlock Grid.Row="1"  Text="Source:" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <TextBox Height="25" Grid.Column="1" Margin="10,10,0,0" Grid.Row="1" Text="{Binding SourceFile}"/>

            <controls:CustomBorderButton Grid.Column="2" Grid.Row="1" ToolTip="Browse" BorderBackground="White" HorizontalAlignment="Center"
                                         FontContent="&#xf15b;" Foreground="Black" FontSize="18"
               Margin="10,10,0,0" ButtonPadding="0" Command="{Binding BrowseSourceFileCommand}"/>
            
            <TextBlock Text="Destination:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <TextBox Height="25" Grid.Column="1" Grid.Row="2" Margin="10,10,0,0" Text="{Binding DestinationPath}"/>

            <controls:CustomBorderButton Grid.Column="2" Grid.Row="2" ToolTip="Browse" BorderBackground="White" 
                                         ButtonPadding="0" HorizontalAlignment="Right" FontContent="&#xf07b;" Foreground="Black" FontSize="18"
                       Margin="0,10,0,0" Command="{Binding BrowseDestinationCommand}"/>

            <controls:CustomBorderButton Grid.Row="3" ToolTip="Restore" BorderBackground="White" HorizontalAlignment="Right" FontContent="&#xf1b8;" Foreground="Green" FontSize="20"
                               Margin="0,10,0,0" Grid.Column="2" ButtonPadding="5" Command="{Binding RestoreCommand}"/>
        </Grid>
    </GroupBox>
</UserControl>
